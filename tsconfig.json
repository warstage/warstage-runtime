    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "index.ts",
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
